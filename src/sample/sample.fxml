<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400" prefWidth="800" styleClass="root" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <MenuBar id="menu-bar" focusTraversable="true" onKeyPressed="#handleKeyInput">
        <menus>
            <Menu text="File">
                <items>
                    <MenuItem onAction="#onCreateNewFile" text="New" />
                    <MenuItem onAction="#onOpenFile" text="Open" />
                    <MenuItem fx:id="MISave" text="Save" />
                    <MenuItem fx:id="MISaveAs" text="Save As" />
                    <SeparatorMenuItem />
                    <MenuItem onAction="#onExit" text="Exit" />
                </items>
            </Menu>
            <Menu fx:id="MIEdit" text="Edit">
                <items>
                    <MenuItem text="Copy" />
                    <MenuItem text="Cut" />
                    <MenuItem text="Paste" />
                </items>
            </Menu>
            <Menu text="Help">
                <items>
                    <MenuItem disable="true" text="Search" />
                    <MenuItem text="Online Manual" visible="false" />
                    <SeparatorMenuItem />
                    <MenuItem onAction="#onShowAbout" text="About" />
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <HBox VBox.vgrow="ALWAYS">
        <SplitPane id="main-content" dividerPositions="0.85" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <items>
                <TabPane fx:id="TPPolygonFiles" tabClosingPolicy="ALL_TABS" VBox.vgrow="ALWAYS" />
                <VBox id="right-side-menu" minWidth="120" spacing="5.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
                    <padding><Insets bottom="5" left="5" right="5" top="5" /></padding>
                    <Button fx:id="BAddPoints" prefWidth="150">Add points</Button>
                    <Button fx:id="BBuildPolygon" prefWidth="150">Build polygon</Button>
                    <Button fx:id="BRemovePolygon" prefWidth="150">Remove polygon</Button>
                </VBox>
            </items>
        </SplitPane>
    </HBox>

    <stylesheets>
        <URL value="@main.css" />
    </stylesheets>
</VBox>
